<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/font_families</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow_rating</item>
        <item name="android:progressTint">@color/yellow_rating</item>
    </style>


    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:drawablePadding">@dimen/padding12</item>
        <item name="android:paddingBottom">@dimen/padding14.5</item>
        <item name="android:maxLines">1</item>
        <item name="android:dividerHeight">.3dp</item>
        <!--<item name="fontPath">fonts/Montserrat-Medium.ttf</item>-->
        <item name="android:fontFamily">@font/font_families</item>
    </style>

    <!-- Normal text size -->
    <style name="TextViewMedium" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_12.5</item>
        <!--<item name="fontPath">fonts/Montserrat-Medium.ttf</item>-->
        <item name="android:fontFamily">@font/font_families</item>
    </style>

    <!-- Regular text size -->
    <style name="TextViewRegular" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_10.5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="fontPath">fonts/Montserrat-Regular.ttf</item>-->
        <item name="android:fontFamily">@font/font_families</item>
    </style>


</resources>
